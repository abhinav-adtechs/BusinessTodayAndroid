<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/tv_item_requests_individual_company"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="26dp"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="19dp"
            android:text="Samsung Inc" />

        <TextView
            android:id="@+id/tv_item_requests_idividual_request_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_item_requests_individual_company"
            android:layout_below="@+id/tv_item_requests_individual_company"
            android:layout_marginTop="14dp"
            android:layout_marginEnd="10dp"
            android:text="Samsung Inc has requested 10 units of the product Macbook Pro 13' at amount 75000 " />



        <Button
            android:id="@+id/btn_item_requests_individual_reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="REJECT"
            android:textColor="@color/cpb_red_dark"
            android:textStyle="bold"
            android:layout_below="@+id/tv_item_requests_idividual_request_string"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="22dp" />

        <Button
            android:id="@+id/btn_item_requests_individual_accept"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/btn_item_requests_individual_reject"
            android:layout_alignBottom="@+id/btn_item_requests_individual_reject"
            android:layout_toStartOf="@+id/btn_item_requests_individual_reject"
            android:background="@android:color/transparent"
            android:text="Accept"
            android:textColor="@color/cpb_green_dark"
            android:textStyle="bold" />


    </RelativeLayout>


</android.support.v7.widget.CardView>
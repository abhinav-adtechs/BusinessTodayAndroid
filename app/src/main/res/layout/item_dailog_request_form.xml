<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <EditText
        android:id="@+id/tv_item_dialog_request_form_count"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="43dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_item_dailog_request_form_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_dialog_request_form_count"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:background="@android:color/transparent"
        android:layout_marginBottom="20dp"
        android:text="Confirm" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:layout_alignEnd="@+id/tv_item_dialog_request_form_count"
        android:layout_alignTop="@+id/tv_item_dialog_request_form_count"
        android:layout_marginEnd="47dp"
        android:layout_marginTop="10dp"
        android:text="Enter item count: " />
</RelativeLayout>